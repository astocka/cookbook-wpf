<Page x:Class="Cookbook.Recipes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookbook"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cookbook - Recipes">
    <ScrollViewer>
        <StackPanel CanVerticallyScroll="True">
            <Label FontSize="24" Margin="30,10,0,10">Recipes</Label>

            <ListView x:Name="lstAllRecipes" MinHeight="450" MinWidth="500" HorizontalAlignment="Left" Margin="30,15,30,30" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="txtSelectedRecipe" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseDoubleClick" Handler="txtSelectedRecipe_OnMouseDoubleClick"></EventSetter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
